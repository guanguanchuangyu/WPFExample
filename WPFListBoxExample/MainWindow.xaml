<Window x:Class="WPFListBoxExample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFListBoxExample"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel>
        <ListBox SelectionChanged="ListBox_SelectionChanged">
            <ListBoxItem Content="Menu01"></ListBoxItem>
            <ListBoxItem Content="Menu02"></ListBoxItem>
            <ListBoxItem Content="Menu03"></ListBoxItem>
            <ListBoxItem Content="Menu04"></ListBoxItem>
        </ListBox>
        <ContentControl x:Name="MainCont" Padding="0" Style="{x:Null}">
            
        </ContentControl>
    </DockPanel>
</Window>
